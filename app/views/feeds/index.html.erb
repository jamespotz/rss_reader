<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Feeds</h1>
  <table class="table-minimal">
    <thead>
      <tr>
        <th>Name</th>
        <th>Url</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @feeds.each do |feed| %>
        <tr>
          <td><%= feed.name %></td>
          <td><%= feed.url %></td>
          <td><%= feed.description %></td>
          <td><%= link_to 'Show', entries_path(id: feed.id) %></td>
          <td><%= link_to 'Edit', edit_feed_path(feed) %></td>
          <td><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <button><%= link_to 'New Feed', new_feed_path %></button>

</div>
